<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RequestLayoutBugTest.MainPage">

    <ScrollView>
        <VerticalStackLayout x:Name="layout"
                             Spacing="25"
                             Padding="30">
            <Frame>
                <StackLayout>
                    <Label Text="Verse of the day"
                           FontSize="Medium"
                           FontAttributes="Bold"
                           Padding="0,0,0,10"
                           TextColor="Black"/>
                    <Label x:Name="verseOfTheDay"
                           Text="This is a paragraph"
                           TextColor="Black"/>
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
